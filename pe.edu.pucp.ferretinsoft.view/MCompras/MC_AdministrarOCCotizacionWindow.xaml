    <Grid>
        <TabControl x:Name="ordenesCompraTab" Margin="0">
            <TabItem Header="Búsqueda">
                <Grid Background="#FFE5E5E5" Margin="0,-3,0.115,-1.408" RenderTransformOrigin="0.49,0.513">
                    <Grid.ColumnDefinitions>
