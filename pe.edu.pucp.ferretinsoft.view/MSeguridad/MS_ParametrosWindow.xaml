        <Button Content="CANCELAR" HorizontalAlignment="Left" Margin="262,261,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="1.347,-0.05" Height="30"/>
        <Label Content="(minutos)" HorizontalAlignment="Left" Margin="358,61,0,0" VerticalAlignment="Top" Height="26" Width="61"/>
        <Label Content="(meses)" HorizontalAlignment="Left" Margin="358,92,0,0" VerticalAlignment="Top" Height="26" Width="61"/>
