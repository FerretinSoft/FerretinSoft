                        <Label Content="Puntos Actual:" VerticalContentAlignment="Center" Grid.Column="4" Grid.Row="5"/>
                        <Label Content="Última Compra:" VerticalContentAlignment="Center" Grid.Column="4" Grid.Row="6"/>
                        <Label Content="Total Compras:" VerticalContentAlignment="Center" Grid.Column="4" Grid.Row="7"/>
                        <Label Content="Comentarios:" VerticalContentAlignment="Center" Grid.Column="4" Grid.Row="8"/>

                        <TextBox VerticalAlignment="Center" Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2"/>
                        <ComboBox Grid.ColumnSpan="2" VerticalAlignment="Center" IsReadOnly="True" SelectedIndex="0" Grid.Column="2" Grid.Row="2">
                            <ListBoxItem Content="Persona Natural"/>
                            <ListBoxItem Content="Persona Jurídica"/>
                        </ComboBox>
                        <TextBox VerticalAlignment="Center" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="3"/>
                        <TextBox VerticalAlignment="Center" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="3"/>
                        <TextBox VerticalAlignment="Center" Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="3"/>
                        <ComboBox VerticalAlignment="Center" Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="1"/>
                        <ComboBox VerticalAlignment="Center" Grid.Column="3" Grid.Row="6" Grid.ColumnSpan="1"/>
                        <ComboBox VerticalAlignment="Center" Grid.Column="1" Grid.Row="7" Grid.ColumnSpan="1"/>
                        <ComboBox VerticalAlignment="Center" Grid.Column="3" Grid.Row="7" Grid.ColumnSpan="1"/>
