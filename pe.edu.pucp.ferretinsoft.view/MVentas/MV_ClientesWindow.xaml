                        <Label Content="DNI/RUC:" VerticalContentAlignment="Center" Grid.Column="1" Grid.Row="1"/>
                        <Label Content="Tipo Cliente:" VerticalContentAlignment="Center" Grid.Column="1" Grid.Row="2"/>
                        <Label Content="Nombre:" VerticalContentAlignment="Center" Grid.Column="0" Grid.Row="3"/>
                        <Label Content="Contacto:" VerticalContentAlignment="Center" Grid.Column="0" Grid.Row="4"/>
                        <Label Content="Dirección:" VerticalContentAlignment="Center" Grid.Column="0" Grid.Row="5"/>
                        <Label Content="Distrito:" VerticalContentAlignment="Center" Grid.Column="0" Grid.Row="6"/>
                        <Label Content="Cód Post.:" VerticalContentAlignment="Center" Grid.Column="2" Grid.Row="6"/>
                        <Label Content="Provincia:" VerticalContentAlignment="Center" Grid.Column="0" Grid.Row="7"/>
                        <Label Content="País:" VerticalContentAlignment="Center" Grid.Column="2" Grid.Row="7"/>
                        <Label Content="Telf. 1:" VerticalContentAlignment="Center" Grid.Column="0" Grid.Row="8"/>
                        <Label Content="Telf. 2:" VerticalContentAlignment="Center" Grid.Column="2" Grid.Row="8"/>
                        <Label Content="Email:" VerticalContentAlignment="Center" Grid.Column="0" Grid.Row="9"/>
                        <Label Content="Fecha Nacimiento:" VerticalContentAlignment="Center" Grid.Column="0" Grid.Row="10"/>
                        <Label Content="Sexo:" VerticalContentAlignment="Center" Grid.Column="2" Grid.Row="10"/>

