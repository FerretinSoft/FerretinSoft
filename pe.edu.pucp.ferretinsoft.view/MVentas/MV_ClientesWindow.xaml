                        <ComboBox Grid.ColumnSpan="2" VerticalAlignment="Center" IsReadOnly="True" SelectedIndex="0" Grid.Column="2" Grid.Row="2">
                            <ListBoxItem Content="Persona Natural"/>
                            <ListBoxItem Content="Persona Jurídica"/>
