                        <TextBox VerticalAlignment="Center" Grid.Column="3" Grid.Row="8" Grid.ColumnSpan="1"/>
                        <TextBox VerticalAlignment="Center" Grid.Column="1" Grid.Row="9" Grid.ColumnSpan="3"/>
                        <DatePicker VerticalAlignment="Center" Grid.Column="1" Grid.Row="10" BorderThickness="0"></DatePicker>
                        <ComboBox VerticalAlignment="Center" Grid.Column="3" Grid.Row="10" Grid.ColumnSpan="1"/>

                        <TextBox VerticalAlignment="Center" Grid.Column="5" Grid.Row="1" IsEnabled="False"/>
                        <DatePicker VerticalAlignment="Center" Grid.Column="5" Grid.Row="2" BorderThickness="0"></DatePicker>
                        <TextBox VerticalAlignment="Center" Grid.Column="5" Grid.Row="3" IsEnabled="False"/>
                        <TextBox VerticalAlignment="Center" Grid.Column="5" Grid.Row="4" IsEnabled="False"/>
                        <TextBox VerticalAlignment="Center" Grid.Column="5" Grid.Row="5" IsEnabled="False"/>
                        <TextBox VerticalAlignment="Center" Grid.Column="5" Grid.Row="6" IsEnabled="False"/>
                        <TextBox VerticalAlignment="Center" Grid.Column="5" Grid.Row="7" IsEnabled="False"/>
                        <TextBox VerticalAlignment="Stretch" Margin="0,5,0,5" Grid.Column="5" Grid.Row="8" Grid.RowSpan="2" IsEnabled="False"/>

                        <StackPanel Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="11" Orientation="Horizontal" HorizontalAlignment="Right"/>
                    </Grid>
                    <StackPanel x:Name="seleccionarDetallePanel" Orientation="Horizontal" Margin="5" Grid.Row="1" HorizontalAlignment="Center">
                        <Button Height="30" x:Name="seleccionarDetalleClienteBtn" Content="Seleccionar" Padding="5,0" Margin="5,0"/>
                        <Button Height="30" x:Name="cancelarDetalleClienteBtn" Content="Cancelar" Padding="5,0" Margin="5,0" Click="cancelarListaClienteBtn_Click" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Edición" x:Name="edicionTab">
