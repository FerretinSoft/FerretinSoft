                        <TextBox VerticalAlignment="Center" Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="3"/>
                        <ComboBox VerticalAlignment="Center" Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="1"/>
                        <ComboBox VerticalAlignment="Center" Grid.Column="3" Grid.Row="6" Grid.ColumnSpan="1"/>
                        <ComboBox VerticalAlignment="Center" Grid.Column="1" Grid.Row="7" Grid.ColumnSpan="1"/>
                        <ComboBox VerticalAlignment="Center" Grid.Column="3" Grid.Row="7" Grid.ColumnSpan="1"/>
                        <TextBox VerticalAlignment="Center" Grid.Column="1" Grid.Row="8" Grid.ColumnSpan="1"/>
                        <TextBox VerticalAlignment="Center" Grid.Column="3" Grid.Row="8" Grid.ColumnSpan="1"/>
                        <TextBox VerticalAlignment="Center" Grid.Column="1" Grid.Row="9" Grid.ColumnSpan="3"/>
                        <DatePicker VerticalAlignment="Center" Grid.Column="1" Grid.Row="10" BorderThickness="0"></DatePicker>
                        <ComboBox VerticalAlignment="Center" Grid.Column="3" Grid.Row="10" Grid.ColumnSpan="1"/>
                        <TextBox VerticalAlignment="Stretch" Margin="0,5,0,5" Grid.Column="5" Grid.Row="1" Grid.RowSpan="2"/>

                        <StackPanel Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="11" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
                            <Button Margin="0,0,10,0" Padding="10,0" Height="30">GUARDAR</Button>
                            <Button Padding="10,0" Height="30">CANCELAR</Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Nuevo" x:Name="nuevoTab">
                <Grid Background="#FFE5E5E5">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="3*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

